{

  	"manifest_version": 2,
  	"name": "InstantView for Youtubeâ„¢",
    "short_name": "InstantView",
  	"version": "3.1.1",

  	"description": "Allows youtube videos to be opened in a popup (without changing pages)",

    "permissions": [
        "https://www.googleapis.com/*"
    ],

    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

  	"content_scripts": [
    	{
      		"matches": ["*://www.youtube.com/*"],
            "js": ["src/webcomponents.js", "src/elements/s-modal.js", "src/elements/ytvp-modal.js", "src/ytvp.js", "src/youtube_iframe_api.js"],
            "css": ["src/elements/s-modal.css", "src/elements/ytvp-modal.css"]
    	}
  	]

}